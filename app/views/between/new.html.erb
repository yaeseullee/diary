
<h1>Between You and I</h1>
<%= form_for :between, url: between_index_path do |f| %>

	<p>
		<%= f.label :photo %><br>
		<%= f.file_field :photo %>

	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :text %><br>
		<%= f.text_area :text %>
	</p>

	<p>
		<%= f.submit %>
	</p>
<% end %>
