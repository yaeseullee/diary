
<div class="between">
<h1><span style="background-color:#FFE3EE">Between diary</span></h1>
<%= form_for :between, url: between_index_path do |f| %>

	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :text %><br>
		<%= f.text_area :text %>
	</p>

	<p>
    	<%= f.label :photo %><br>
    	<center><%= f.file_field :photo %></center>
  	</p>

	<p>
		<%= f.submit %>
	</p>
<% end %>
</div>
