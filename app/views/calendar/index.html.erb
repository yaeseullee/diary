<div class="container">
	<div class = "log_in">
		<% if user_signed_in? %>
		  <p><%= current_user.email %></p>
		  <p><%= image_tag(current_user.avatar, :width => 200) %></p>
		  <p><%= link_to "로그아웃", destroy_user_session_path, method: :delete, data: { confirm: "Are you sure?" } %></p>
		<% else %>
		  <p><%= link_to "로그인", new_user_session_path %></p>
		<% end %>
	</div>

	<%= month_calendar do |between_date| %>
	  <% date_output = between_date.strftime("%d") %>
	  <%= date_output %>
	  <% between_btn = Between.where(:created_at => (between_date.to_date.beginning_of_day..between_date.to_date.end_of_day)).first %>
      <% if between_btn %>
        <br><%= link_to 'Between', between_path(between_btn), class: 'btn btn-default' %>
      <% end %>
    <% end %>
	</div>
