<h1>Today's story</h1>
<%= form_for :story, url: story_index_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.label :photo %><br>
    <%= f.file_field :photo %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>