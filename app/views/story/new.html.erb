<div class="story">
<h1>Today's story</h1>

<%= form_for :story, url: story_index_path do |f| %>
  
  <p>
    <br><%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
 
 <p>
    <%= f.label :photo %><br>
    <center><%= f.file_field :photo %></center>
  </p> 
  
  <p>
    <br><%= f.submit %>
  </p>
<% end %>
</div>